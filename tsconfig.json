{
    "version": "2.4.2",
    "compilerOptions": {
        "declaration": true,
        "lib": ["es2017", "esnext.asynciterable"],
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "strict": true,
        "outDir": "backend"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
